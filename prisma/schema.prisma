generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  username  String
  name      String
  email     String   @unique
  phone     String
  password  String
  role      UserRole @default(CLIENT)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   Address?
  order     Order[]

  @@map("user")
}

enum UserRole {
  CLIENT
  DELIVERY_MAN
  ADMIN
}

model Address {
  id      String  @id @unique @default(uuid())
  street  String?
  number  String?
  city    String?
  country String?
  zipCode String?
  userId  String  @default(uuid())
  user    User    @relation(fields: [userId], references: [id])

  @@unique([userId])
  @@map("address")
}

model Product {
  id          String         @id @unique @default(uuid())
  name        String         @unique
  description String         @db.VarChar(200)
  image       String
  price       Int
  situation   Boolean        @default(true)
  categoryId  String?        @default(uuid())
  category    Category?      @relation(fields: [categoryId], references: [id])
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  orders      OrderProduct[]

  @@map("product")
}

model Category {
  id       String    @id @unique @default(uuid())
  name     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("category")
}

model Order {
  id          String    @id @unique @default(uuid())
  userId      String
  totalAmount Int
  discount    Int
  status      String
  createdAt   DateTime  @default(now())
  endAt       DateTime?

  user     User           @relation(fields: [userId], references: [id])
  products OrderProduct[]

  @@map("order")
}

model OrderProduct {
  orderId   String
  productId String
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([orderId, productId])
  @@map("orderProduct")
}

model Product {
  id          String    @id @unique @default(uuid()) @db.Uuid
  name        String    @unique
  description String
  image       String
  price       Int
  situation   String
  categoryId  String?   @default(uuid()) @db.Uuid
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Category {
  id       String    @id @unique @default(uuid()) @db.Uuid
  name     String
  products Product[]
}

